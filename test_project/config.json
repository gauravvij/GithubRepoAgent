{
  "app": {
    "name": "TodoAPI",
    "version": "1.0.0",
    "port": 5000,
    "debug": true
  },
  "database": {
    "path": "todos.db",
    "pool_size": 5
  },
  "api": {
    "base_url": "/api/v1",
    "max_page_size": 100
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
